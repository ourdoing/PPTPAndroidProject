<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ourdoing.pptp.act.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/IP_address_remind"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ipAddr"
        android:layout_marginTop="43dp"
        android:hint="@string/IP_address"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/scanbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:ellipsize="end"
        android:singleLine="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="@string/page_pre"
        android:id="@+id/prebutton"
        android:layout_gravity="left"
        android:layout_marginTop="51dp"
        android:onClick="pre"
        android:layout_below="@+id/ipAddr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="@string/page_next"
        android:id="@+id/nextbutton"
        android:layout_gravity="right"
        android:layout_below="@+id/prebutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:onClick="next"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan"
        android:id="@+id/scanbutton"
        android:onClick="scanStart"
        android:layout_above="@+id/prebutton"
        android:layout_alignRight="@+id/prebutton"
        android:layout_alignEnd="@+id/prebutton" />


</RelativeLayout>
